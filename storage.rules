rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Helper function to check if file is a PDF
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }

    // Helper function to check if file size is within limit (10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Helper function to check if user is member of organization (simplified for now)
    function isOrganizationMember(orgId) {
      return isAuthenticated();
    }

    // Helper function to check if user has admin/owner role in organization (simplified for now)
    function isOrganizationAdmin(orgId) {
      return isAuthenticated();
    }

    // Helper function to check if user can manage organization vehicles (simplified for now)
    function canManageOrgVehicles(orgId) {
      return isAuthenticated();
    }

    // Organization certificates - authenticated users can read, write, and delete
    match /certificates/organization/{orgId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
                      (isImage() || isPDF()) &&
                      isValidSize();
      allow delete: if isAuthenticated();
    }

    // Vehicle certificates
    match /certificates/vehicle/{vehicleId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
                      (isImage() || isPDF()) &&
                      isValidSize();
      allow delete: if isAuthenticated();
    }

    // Profile pictures - users can manage their own profile pictures
    match /profile-pictures/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write, delete: if isOwner(userId) &&
                              isImage() &&
                              isValidSize();
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
